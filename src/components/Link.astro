---
const { linkTitle, linkDescription, linkUrl, linkLogo } = Astro.props
---

<div class='flex flex-col items-center w-full gap-y-8'>
  <div
    class='flex flex-col cursor-pointer justify-center w-full p-3 text-sm text-center text-white transition-all duration-500 bg-white bg-opacity-20 backdrop-filter backdrop-blur-lg rounded-xl lg:text-xl hover:bg-opacity-40 hover:scale-110'
  >
    <a href={linkUrl} target="_blank" rel="noopener noreferrer">
      <button>
        {linkLogo && <img src={linkLogo} alt="Logo" class="inline h-6 w-auto mr-1" />}
        <span class='font-semibold px-3'>{linkTitle}{" "}</span>
        {linkDescription}
      </button>
    </a>
  </div>
</div>